<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_report_delivery_order_mini" model="ir.actions.report">
        <field name="name">Custom Delivery Order</field>
        <field name="model">stock.picking</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">rj_invoice.report_delivery_order_mini_template</field>
        <field name="report_file">rj_invoice.report_delivery_order_mini_template</field>
        <field name="paperformat_id" ref="rj_invoice.paperformat_invoice_a5_custom"/>
        <field name="binding_model_id" ref="stock.model_stock_picking"/>
        <field name="binding_type">report</field>
    </record>

    <template id="report_delivery_order_mini_template">
        <t t-call="web.html_container">
        <meta charset="utf-8"/>
            <t t-foreach="docs" t-as="doc">
                <!-- <t t-call="web.basic_layout">
                    <div class="page">
                        <h1>Delivery Order</h1>
                        <p>This is a custom print for delivery order <span t-esc="doc.name"/>.</p>
                    </div>
                </t> -->
                <style>
                    @page {
                        size: 20cm 27.94cm;
                        margin: 0.4cm;
                    }
                    body {
                        margin: 0;
                        font-family: "Consolas", "Lucida Console", "Liberation Mono", monospace;
                    }
                    table {
                        border-collapse: collapse;
                        width: 100%;
                    }
                    th, td {
                        border: 1px solid #000;
                        padding: 3px;
                    }
                    .no-border td {
                        border: none !important;
                    }
                </style>

                <div class="page" style="font-size: 11pt; line-height: 1.3;">
                    <!-- <table class="no-border" style="font-size: 11pt;">
                        <tr>
                            <td class="no-border" style="width: 60%;">
                                <t t-if="doc.company_id.name">
                                    <div style="font-size: 13pt;">
                                        <strong><t t-esc="doc.company_id.name"/></strong>
                                    </div>
                                </t>
                            </td>
                            <td class="no-border" style="width: 40%; text-align: right; font-size: 14pt;">
                                <t t-if="doc.custom_sequence">
                                    <div>
                                        <strong>SEQ: <t t-esc="doc.custom_sequence"/></strong>
                                    </div>
                                </t>
                            </td>
                        </tr>
                    </table> -->
                    <table class="no-border" style="font-size: 11pt; width:100%;">
                        <tr>
                            <!-- Kolom kiri: Nama perusahaan -->
                            <td class="no-border" style="width: 33%; text-align: left;">
                                <t t-if="doc.company_id.name">
                                    <div style="font-size: 13pt;">
                                        <strong><t t-esc="doc.company_id.name"/></strong>
                                    </div>
                                </t>
                            </td>

                            <!-- Kolom tengah: SURAT JALAN -->
                            <td class="no-border" style="width: 34%; text-align: center;">
                                <div style="font-size: 14pt; font-weight: bold;">
                                    SURAT JALAN
                                </div>
                            </td>

                            <!-- Kolom kanan: SEQ (hanya jika ada datanya) -->
                            <td class="no-border" style="width: 33%; text-align: right; font-size: 14pt;">
                                <t t-if="doc.custom_sequence">
                                    <div>
                                        <strong>SEQ: <t t-esc="doc.custom_sequence"/></strong>
                                    </div>
                                </t>
                            </td>
                        </tr>
                    </table>
                    <hr style="border: 0; border-top: 1px solid #000; margin: 3px 0; width:100%;" />
                    <table class="no-border" style="font-size: 11pt; width:100%;">
                        <tr>
                            <td style="vertical-align: top; width: 85%;">
                                <table class="no-border" style="font-size: 11pt; width:100%;">
                                    <tr>
                                        <td style="padding:0; margin:0;">
                                            <strong>Kepada Yth:</strong>
                                        </td>
                                    </tr>

                                    <tr>
                                        <td style="padding:0; margin:0;">
                                            <t t-esc="doc.partner_id.name or ''"/>
                                        </td>
                                    </tr>

                                    <tr>
                                        <td style="padding:0; margin:0;">
                                            <t t-esc="doc.partner_id.street or ''"/>
                                        </td>
                                    </tr>

                                    <t t-if="doc.partner_id.street2">
                                        <tr>
                                            <td style="padding:0; margin:0;">
                                                <t t-esc="doc.partner_id.street2"/>
                                            </td>
                                        </tr>
                                    </t>

                                    <t t-if="doc.partner_id.city or doc.partner_id.state_id or doc.partner_id.zip">
                                        <tr>
                                            <td style="padding:0; margin:0;">
                                                <t t-set="parts" t-value="[doc.partner_id.city or '',
                                                                        doc.partner_id.state_id.name if doc.partner_id.state_id else '',
                                                                        doc.partner_id.zip or '']"/>
                                                <t t-set="clean_parts" t-value="[p for p in parts if p]"/>
                                                <t t-out="', '.join(clean_parts)"/>
                                            </td>
                                        </tr>
                                    </t>

                                    <t t-if="doc.partner_id.phone">
                                        <tr>
                                            <td style="padding:0; margin:0;">
                                                Telp. <t t-esc="doc.partner_id.phone"/>
                                            </td>
                                        </tr>
                                    </t>

                                    <t t-if="doc.partner_id.vat">
                                        <tr>
                                            <td style="padding:0; margin:0;">
                                                NPWP: <t t-esc="doc.partner_id.vat"/>
                                            </td>
                                        </tr>
                                    </t>
                                </table>
                            </td>

                            <td style="vertical-align: top; width: 15%; text-align: right; font-size: 15pt; font-weight:bold;">
                                SURAT JALAN
                            </td>
                        </tr>
                    </table>

                </div>
            </t>
        </t>
    </template>
</odoo>