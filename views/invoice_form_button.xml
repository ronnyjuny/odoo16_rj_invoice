<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_move_form_inherit_invoice_a5" model="ir.ui.view">
        <field name="name">account.move.form.invoice.a5.button</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="%(rj_invoice.action_report_invoice_mini)d"
                        string="Custom Print"
                        type="action"
                        class="btn-secondary"
                        icon="fa-print"
                        groups="account.group_account_invoice"/>
            </xpath>
        </field>
    </record>
</odoo>