<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_invoice_mini_document">
        <t t-call="web.html_container">
        <meta charset="utf-8"/>
            <t t-foreach="docs" t-as="invoice">
                <style>
                    @page {
                        size: 20cm 13.97cm;
                        margin: 0.4cm;
                    }
                    body {
                        margin: 0;
                        font-family: "Consolas", "Lucida Console", "Liberation Mono", monospace;
                    }
                    table {
                        border-collapse: collapse;
                        width: 100%;
                    }
                    th, td {
                        border: 1px solid #000;
                        padding: 3px;
                    }
                    .no-border td {
                        border: none !important;
                    }
                </style>

                <div class="page" style="font-size: 10pt; line-height: 1.3;">

                    <!-- HEADER -->
                    <table class="no-border" style="margin-bottom: 15px;">
                        <tr>
                            <!-- Kiri: Info Perusahaan -->
                            <td style="width: 40%; vertical-align: top;">
                                <table class="no-border" style="font-size: 11pt;">
                                    <tr>
                                        <td style="font-size: 13pt;"><strong><t t-esc="invoice.company_id.name"/></strong></td>
                                    </tr>
                                    <tr><td><t t-esc="invoice.company_id.street or ''"/></td></tr>
                                    <tr><td><t t-esc="invoice.company_id.phone or ''"/></td></tr>
                                </table>
                            </td>

                            <!-- Tengah: Judul Invoice -->
                            <td style="width: 25%; text-align: center; vertical-align: top;">
                                <h2 style="margin: 2px 0; font-size: 14pt;">INVOICE</h2>
                                <div style="font-size: 11pt;">
                                    <t t-esc="invoice.name"/>
                                </div>
                            </td>

                            <!-- Kanan: Info Customer -->
                            <td style="width: 35%; vertical-align: top; font-size: 11pt;">
                                <div><strong>Kepada Yth:</strong></div>
                                <div><t t-esc="invoice.partner_id.name or ''"/></div>
                                <div><t t-esc="invoice.partner_id.street or ''"/></div>
                                <div><t t-esc="invoice.partner_id.city or ''"/></div>
                                <t t-if="invoice.partner_id.phone">
                                    <div>Telp. <t t-esc="invoice.partner_id.phone"/></div>
                                </t>
                            </td>
                        </tr>
                    </table>

                    <!-- INFORMASI TAMBAHAN -->
                    <table class="no-border" style="font-size: 11pt; margin-bottom: 6px; width: 100%;">
                        <tr>
                            <!-- Date -->
                            <td style="width:25%;">Date: <span t-field="invoice.invoice_date"/></td>

                            <!-- PO -->
                            <t t-if="invoice.ref">
                                <td style="width:50%;">PO: <t t-esc="invoice.ref"/></td>
                            </t>

                            <!-- Term -->
                            <t t-if="invoice.invoice_payment_term_id">
                                <td style="width:25%;">Term: 
                                    <t t-esc="invoice.invoice_payment_term_id.name"/>
                                </td>
                            </t>
                        </tr>
                    </table>

                    <!-- TABEL PRODUK -->
                    <table style="font-size: 11pt; width:100%;">
                        <thead>
                            <tr>
                                <th style="width:4%;">No</th>
                                <th style="width:62%;">Nama Barang</th>
                                <th style="width:10%;">Quantity</th>
                                <th style="width:11%;">Harga</th>
                                <th style="width:13%;">Jumlah</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-set="index" t-value="0"/>
                            <t t-foreach="invoice.invoice_line_ids" t-as="line">
                                <t t-if="line.product_id">
                                    <t t-set="index" t-value="index + 1"/>
                                    <tr>
                                        <td style="text-align:center;"><t t-esc="index"/></td>
                                        <td>
                                            <!-- <t t-raw="(line.name or '').replace('\n','&lt;br/&gt;')"/> -->
                                            <t t-raw="(line.product_id and line.product_id.name or line.name or '').replace('\n','&lt;br/&gt;')"/>
                                        </td>
                                        <td style="text-align:center;">
                                            <t t-esc="'%d %s' % (int(line.quantity), line.product_uom_id.name or '')"/>
                                        </td>
                                        <td style="text-align:right;">
                                            <t t-esc="'{:,}'.format(int(line.price_unit or 0)).replace(',', '.')"/>
                                        </td>
                                        <td style="text-align:right;">
                                            <t t-esc="'{:,}'.format(int(line.price_subtotal or 0)).replace(',', '.')"/>
                                        </td>
                                    </tr>
                                    <!-- Note lines -->
                                    <t t-foreach="invoice.invoice_line_ids.filtered(lambda l: not l.product_id and l.sequence == line.sequence + 1)" t-as="note">
                                        <tr>
                                            <td colspan="5" style="font-style:italic; padding-left:10px;">
                                                <t t-raw="note.name.replace('\n','&lt;br/&gt;')"/>
                                            </td>
                                        </tr>
                                    </t>
                                </t>
                            </t>
                        </tbody>
                    </table>

                    <!-- TOTAL, AMOUNT IN WORDS, DAN TANDA TANGAN -->
                    <table class="no-border" style="margin-top: 10px; font-size: 11pt; width: 100%;">
                        <tr>
                            <!-- Kolom kiri -->
                            <td style="width: 75%; vertical-align: top;">
                                <!-- Catatan -->
                                <div style="margin-bottom:10px;">
                                    <div style="border:1px solid #000; padding:5px; font-size:11pt; text-align:center; width:85%;">
                                        BARANG YANG TELAH DIBELI TIDAK DAPAT DITUKAR / DIKEMBALIKAN
                                    </div>
                                </div>
                                
                                <!-- Amount in Words (perlu custom field di Odoo 16) -->
                                <!-- <t t-if="invoice.amount_total">
                                    <div style="font-size: 11pt; margin-bottom: 10px;">
                                        <strong>Terbilang:</strong>
                                        <t t-esc="invoice.currency_id.amount_to_text(invoice.amount_total)"/>
                                    </div>
                                </t> -->
                                
                                <!-- Narration -->
                                <t t-if="invoice.narration">
                                    <div style="font-size: 11pt; margin-bottom: 10px;">
                                        <span t-raw="invoice.narration"/>
                                    </div>
                                </t>

                                <!-- Tanda tangan -->
                                <table class="no-border" style="width:100%; text-align:center;">
                                    <tr>
                                        <td>Hormat Kami,</td>
                                        <td>Diterima Oleh,</td>
                                    </tr>
                                    <tr><td style="height:50px;"></td><td></td></tr>
                                    <tr>
                                        <td></td>
                                        <td></td>
                                    </tr>
                                </table>
                            </td>

                            <!-- Kolom kanan: Total -->
                            <td style="width: 25%; vertical-align: top;">
                                <table style="width:100%; border-collapse:collapse;">
                                    <t t-if="invoice.amount_tax > 0">
                                        <tr>
                                            <td style="border:1px solid #000; font-weight:bold; text-align:right;">Subtotal:</td>
                                            <td style="border:1px solid #000; text-align:right; font-weight:bold;">
                                                <t t-esc="'{:,}'.format(int(invoice.amount_untaxed or 0)).replace(',', '.')"/>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td style="border:1px solid #000; font-weight:bold; text-align:right;">PPN:</td>
                                            <td style="border:1px solid #000; text-align:right; font-weight:bold;">
                                                <t t-esc="'{:,}'.format(int(invoice.amount_tax or 0)).replace(',', '.')"/>
                                            </td>
                                        </tr>
                                    </t>
                                    <tr>
                                        <td style="border:1px solid #000; font-weight:bold; text-align:right;">Total:</td>
                                        <td style="border:1px solid #000; text-align:right; font-weight:bold;">
                                            <t t-esc="'{:,}'.format(int(invoice.amount_total)).replace(',', '.')"/>
                                        </td>
                                    </tr>
                                </table>
                            </td>
                        </tr>
                    </table>

                </div>
            </t>
        </t>
    </template>
</odoo>