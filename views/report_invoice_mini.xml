<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_invoice_mini_document">
        <t t-call="web.html_container">
        <meta charset="utf-8"/>
            <t t-foreach="docs" t-as="invoice">
                <style>
                    @page {
                        <!-- size: 20cm 13.97cm; -->
                        size: 20cm 27.94cm;
                        margin: 0.4cm;
                    }
                    body {
                        margin: 0;
                        font-family: "Consolas", "Lucida Console", "Liberation Mono", monospace;
                    }
                    table {
                        border-collapse: collapse;
                        width: 100%;
                    }
                    th, td {
                        border: 1px solid #000;
                        padding: 3px;
                    }
                    .no-border td {
                        border: none !important;
                    }
                </style>

                <div class="page" style="font-size: 10pt; line-height: 1.3;">
                    <!-- ===================== HEADER ===================== -->
                    <table class="no-border" style="font-size: 11pt;">
                        <tr>
                            <td class="no-border" style="width: 60%;">

                                <!-- Nama Perusahaan -->
                                <t t-if="invoice.company_id.name">
                                    <div style="font-size: 13pt;">
                                        <strong><t t-esc="invoice.company_id.name"/></strong>
                                    </div>
                                </t>

                                <!-- Alamat -->
                                <t t-if="invoice.company_id.street">
                                    <div><t t-esc="invoice.company_id.street"/></div>
                                </t>
                                <t t-if="invoice.company_id.street2">
                                    <div><t t-esc="invoice.company_id.street2"/></div>
                                </t>

                                <!-- Kota + Provinsi -->
                                <t t-if="invoice.company_id.city or invoice.company_id.state_id">
                                    <div>
                                        <t t-esc="'{}, {}'.format(invoice.company_id.city or '', invoice.company_id.state_id.name or '')"/>
                                    </div>
                                </t>

                                <!-- NPWP -->
                                <t t-if="invoice.company_id.vat">
                                    <div>NPWP: <t t-esc="invoice.company_id.vat"/></div>
                                </t>

                                <t t-set="order_type" t-value="
                                    invoice.invoice_line_ids
                                    and invoice.invoice_line_ids[0].sale_line_ids
                                    and invoice.invoice_line_ids[0].sale_line_ids[0].order_id.sale_order_type_id.name
                                    or ''
                                "/>

                                <t t-if="invoice.company_id.name == 'PT. TEGUH PRIMA SENTOSA'">

                                    <!-- Samarinda -->
                                    <t t-if="order_type == 'Samarinda'">
                                        <div>
                                            <span>Telp: 0813-5097-1228</span>
                                            <span style="float:right;">Email: adminsalessmd@teguhprimasentosa.com</span>
                                        </div>
                                    </t>

                                    <!-- Balikpapan -->
                                    <t t-elif="order_type == 'Balikpapan'">
                                        <div>
                                            <span>Telp: 0812-5775-9989</span>
                                            <span style="float:right;">Email: adminsalesbpn@teguhprimasentosa.com</span>
                                        </div>
                                    </t>

                                    <!-- Malinau -->
                                    <t t-elif="order_type == 'Malinau'">
                                        <div>
                                            <span>Telp: 081349498127</span>
                                            <span style="float:right;">Email: adminsalesmal@teguhprimasentosa.com</span>
                                        </div>
                                    </t>

                                    <!-- Tarakan -->
                                    <t t-elif="order_type == 'Tarakan'">
                                        <div>
                                            <span>Telp: 081349498127</span>
                                            <span style="float:right;">Email: adminsalesmal@teguhprimasentosa.com</span>
                                        </div>
                                    </t>

                                    <!-- Default -->
                                    <t t-else="">
                                        <div>
                                            <span>Telp: <t t-esc="invoice.company_id.phone or ''"/></span>
                                            <span style="float:right;">Email: <t t-esc="invoice.company_id.email or ''"/></span>
                                        </div>
                                    </t>

                                </t>

                                <t t-else="">
                                    <t t-if="invoice.company_id.phone">
                                        <div>Telp: <t t-esc="invoice.company_id.phone"/></div>
                                    </t>
                                    <t t-if="invoice.company_id.email">
                                        <div>Email: <t t-esc="invoice.company_id.email"/></div>
                                    </t>
                                </t>

                            </td>

                            <td class="no-border" style="width: 40%; vertical-align: top; text-align: right;">
                                <!-- Order Type -->
                                <t t-if="
                                    invoice.invoice_line_ids 
                                    and invoice.invoice_line_ids[0].sale_line_ids 
                                    and invoice.invoice_line_ids[0].sale_line_ids[0].order_id.sale_order_type_id
                                ">
                                    <div style="font-size: 12pt;">
                                        <strong>
                                            <t t-esc="invoice.invoice_line_ids[0].sale_line_ids[0].order_id.sale_order_type_id.name"/>
                                        </strong>
                                    </div>
                                </t>
                                <!-- Nomor Sequence -->
                                <t t-if="invoice.custom_sequence">
                                    <div style="font-size: 12pt;">
                                        <t t-esc="invoice.custom_sequence"/>
                                    </div>
                                </t>
                                <!-- No Invoice -->
                                <t t-if="invoice.name">
                                    <div style="font-size: 11pt;">
                                        <t t-esc="invoice.name"/>
                                    </div>
                                </t>
                            </td>
                        </tr>
                    </table>

                    <hr style="border: 0; border-top: 1px solid #000; margin: 3px 0;" />
                    <div>
                        <table class="no-border" style="font-size: 11pt;">
                            <div><strong>Kepada Yth:</strong></div>
                            <div><t t-esc="invoice.partner_id.name or ''"/></div>
                            <div><t t-esc="invoice.partner_id.street or ''"/></div>
                            <t t-if="invoice.partner_id.street2">
                                <div><t t-esc="invoice.partner_id.street2"/></div>
                            </t>
                            <t t-if="invoice.partner_id.city or invoice.partner_id.state_id or invoice.partner_id.zip">
                                <div>
                                    <t t-set="parts" t-value="[
                                        invoice.partner_id.city or '',
                                        invoice.partner_id.state_id.name if invoice.partner_id.state_id else '',
                                        invoice.partner_id.zip or ''
                                    ]"/>
                                    <t t-set="clean_parts" t-value="[p for p in parts if p]"/>
                                    <t t-out="', '.join(clean_parts)"/>
                                </div>
                            </t>
                            <t t-if="invoice.partner_id.phone">
                                <div>Telp. <t t-esc="invoice.partner_id.phone"/></div>
                            </t>
                            <t t-if="invoice.partner_id.vat">
                                <div>NPWP: <t t-esc="invoice.partner_id.vat"/></div>
                            </t>
                        </table>
                    </div>

                    <table class="no-border" style="font-size: 11pt; margin-bottom: 6px; width: 100%;">
                        <tr>
                            <!-- Date -->
                            <td style="width:25%;">Date: <span t-field="invoice.invoice_date"/></td>

                            <!-- PO -->
                            <t t-if="invoice.ref">
                                <td style="width:50%;">PO: <t t-esc="invoice.ref"/></td>
                            </t>

                            <!-- Term -->
                            <t t-if="invoice.invoice_payment_term_id">
                                <td style="width:25%;">Term: 
                                    <t t-esc="invoice.invoice_payment_term_id.name"/>
                                </td>
                            </t>
                        </tr>
                    </table>

                    <!-- TABEL PRODUK -->
                    <table style="font-size: 11pt; width:100%;">
                        <thead>
                            <tr>
                                <th style="width:4%;">No</th>
                                <th style="width:50%;">Nama Barang</th>
                                <th style="width:11%;">Quantity</th>
                                <th style="width:11%;">Harga</th>
                                <th style="width:11%;">Discount</th>
                                <th style="width:13%;">Jumlah</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-set="index" t-value="0"/>
                            <t t-foreach="invoice.invoice_line_ids" t-as="line">
                                <t t-if="line.product_id">
                                    <t t-set="index" t-value="index + 1"/>
                                    <tr>
                                        <td style="text-align:center;"><t t-esc="index"/></td>
                                        <td>
                                            <t t-raw="(line.product_id and line.product_id.name or line.name or '').replace('\n','&lt;br/&gt;')"/>
                                        </td>
                                        <td style="text-align:center;">
                                            <!-- <t t-esc="'%d %s' % (int(line.quantity), line.product_uom_id.name or '')"/> -->
                                            <t t-esc="'{:,}'.format(int(line.quantity)).replace(',', '.') + ' ' + (line.product_uom_id.name or '')"/>
                                        </td>
                                        <td style="text-align:right;">
                                            <t t-esc="'{:,}'.format(int(line.price_unit or 0)).replace(',', '.')"/>
                                        </td>
                                        <td style="text-align:right;">
                                            <t t-esc="'{:,}'.format(int(line.invoice_total_discount or 0)).replace(',', '.')"/>
                                        </td>
                                        <td style="text-align:right;">
                                            <t t-esc="'{:,}'.format(int(line.subtotal or 0)).replace(',', '.')"/>
                                        </td>
                                    </tr>
                                    <!-- Note lines -->
                                    <t t-foreach="invoice.invoice_line_ids.filtered(lambda l: not l.product_id and l.sequence == line.sequence + 1)" t-as="note">
                                        <tr>
                                            <td colspan="6" style="font-style:italic; padding-left:10px;">
                                                <t t-raw="note.name.replace('\n','&lt;br/&gt;')"/>
                                            </td>
                                        </tr>
                                    </t>
                                </t>
                            </t>
                        </tbody>
                    </table>

                    <table class="no-border" style="margin-top: 7px; font-size: 11pt; width: 100%;">
                        <tr>
                            <td style="width: 70%; vertical-align: top;">
                                <table class="no-border" style="width:100%; text-align:center;">
                                    <tr>
                                        <td>Hormat Kami,</td>
                                        <td>Penerima,</td>
                                    </tr>
                                    <tr><td style="height:50px;"></td><td></td></tr>
                                    <tr>
                                        <td></td>
                                        <td></td>
                                    </tr>
                                </table>
                            </td>

                            <td style="width: 30%; vertical-align: top;">
                                <table style="width:100%; border-collapse:collapse; margin-bottom: 3px;">
                                    <t t-if="invoice.dpp and int(invoice.dpp) != int(invoice.amount_untaxed)">
                                        <tr>
                                            <td style="border:1px solid #000; font-weight:bold; text-align:right;">Total Amount:</td>
                                            <td style="border:1px solid #000; text-align:right; font-weight:bold;">
                                                <t t-esc="'{:,}'.format(int(invoice.dpp or 0)).replace(',', '.')"/>
                                            </td>
                                        </tr>
                                    </t>

                                    <t t-if="invoice.cash_discount">
                                        <tr>
                                            <td style="border:1px solid #000; font-weight:bold; text-align:right;">Global Discount:</td>
                                            <td style="border:1px solid #000; text-align:right; font-weight:bold;">
                                                <t t-esc="'{:,}'.format(int(invoice.cash_discount or 0)).replace(',', '.')"/>
                                            </td>
                                        </tr>
                                    </t>

                                    <t t-if="invoice.amount_tax > 0">
                                        <tr>
                                            <td style="border:1px solid #000; font-weight:bold; text-align:right;">Net Amount:</td>
                                            <td style="border:1px solid #000; text-align:right; font-weight:bold;">
                                                <t t-esc="'{:,}'.format(int(invoice.amount_untaxed or 0)).replace(',', '.')"/>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td style="border:1px solid #000; font-weight:bold; text-align:right;">Ppn:</td>
                                            <td style="border:1px solid #000; text-align:right; font-weight:bold;">
                                                <t t-esc="'{:,}'.format(int(invoice.amount_tax or 0)).replace(',', '.')"/>
                                            </td>
                                        </tr>
                                    </t>

                                    <tr>
                                        <td style="border:1px solid #000; font-weight:bold; text-align:right;">Total:</td>
                                        <td style="border:1px solid #000; text-align:right; font-weight:bold;">
                                            <t t-esc="'{:,}'.format(int(invoice.amount_total)).replace(',', '.')"/>
                                        </td>
                                    </tr>
                                </table>
                            </td>
                        </tr>
                    </table>
                    <div>
                        <t t-if="invoice.narration">
                            <div style="font-size: 11pt; margin-bottom: 5px;">
                                <span t-raw="invoice.narration"/>
                            </div>
                        </t>
                    </div>

                    <hr style="border: 0; border-top: 1px solid #000; margin: 3px 0; width:100%;" />
                    <t t-if="invoice.number_to_words">
                        <div style="font-size: 11pt; ">
                            <strong>Terbilang:</strong>
                            <t t-esc="invoice.number_to_words"/>
                        </div>
                    </t>
                    <hr style="border: 0; border-top: 1px solid #000; margin: 3px 0; width:100%;" />

                    <t t-set="company" t-value="invoice.company_id.name"/>

                    <t t-set="order_type" t-value="
                        invoice.invoice_line_ids
                        and invoice.invoice_line_ids[0].sale_line_ids
                        and invoice.invoice_line_ids[0].sale_line_ids[0].order_id.sale_order_type_id.name
                        or ''
                    "/>

                    <div style="font-size:9pt; font-family:Consolas, monospace; width:100%; margin-top:5px;">

                        <t t-if="company == 'PT. TEGUH JAYA ABADI SENTOSA'">
                            <table class="no-border" style="width:100%;">
                                <tr>
                                    <td style="width:50%; text-align:left;">
                                        <div>Rekening Pembayaran Ban Mobil</div>
                                        <div>PT. TEGUH JAYA ABADI SENTOSA</div>
                                        <div>BCA: 8615-69-8888 / Mandiri: 148-00-2722777-9</div>
                                    </td>

                                    <td style="width:50%; text-align:left;">
                                        <div>Rekening Pembayaran Ban Motor</div>
                                        <div>PT. TEGUH JAYA ABADI SENTOSA</div>
                                        <div>BCA: 0272-05-2369</div>
                                    </td>
                                </tr>
                            </table>
                        </t>

                        <t t-if="company == 'PT. TEGUH PERKASA KARYA PERDANA'">
                            <div style="text-align:left;">
                                <div>Rekening A.N: PT. TEGUH PERKASA KARYA PERDANA</div>
                                <div>BCA: 191-0771-988 / BRI: 012101-0025-393-00</div>
                            </div>
                        </t>

                        <t t-if="company == 'PT. TEGUH KALTARA PERKASA'">
                            <div style="text-align:left;">
                                <div>Rekening A.N: PT. TEGUH KALTARA PERKASA</div>
                                <div>BCA: 780-520-8881 / Mandiri: 148-002-2285-558</div>
                            </div>
                        </t>

                        <t t-if="company == 'PT. TEGUH GEMILANG OTOMOTIF'">
                            <div style="text-align:left;">
                                <div>Rekening A.N: PT. TEGUH GEMILANG OTOMOTIF</div>
                                <div>BCA: 191-8993-389</div>
                            </div>
                        </t>

                        <t t-if="company == 'PT. TEGUH PRIMA SENTOSA'">
                            <t t-if="order_type">
                                <!-- Samarinda -->
                                <t t-if="order_type == 'Samarinda'">
                                    <div>Rekening A.N: PT. TEGUH PRIMA SENTOSA</div>
                                    <div>Bank BCA: 5135-6767-88</div>
                                </t>

                                <!-- Balikpapan -->
                                <t t-elif="order_type == 'Balikpapan'">
                                    <div>Rekening A.N: PT. TEGUH PRIMA SENTOSA</div>
                                    <div>Bank BCA: 5135-77-8181</div>
                                </t>

                                <!-- Malinau -->
                                <t t-elif="order_type == 'Malinau'">
                                    <div>Rekening A.N: PT. TEGUH PRIMA SENTOSA</div>
                                    <div>Bank Mandiri: 14800-889-25-899</div>
                                </t>

                                <!-- Tarakan -->
                                <t t-elif="order_type == 'Tarakan'">
                                    <div>Rekening A.N: PT. TEGUH PRIMA SENTOSA</div>
                                    <div>Bank Mandiri: 14800-889-25-899</div>
                                </t>
                            </t>
                        </t>
                    </div>

                </div>
            </t>
        </t>
    </template>
</odoo>